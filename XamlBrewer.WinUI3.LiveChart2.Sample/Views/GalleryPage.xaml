                            Background="{ThemeResource SystemAccentColor}"
                            Opacity=".5" />

                    <TextBlock Text="Bars - Race"
                               Padding="0"
                               HorizontalAlignment="Stretch"
                               FontSize="16"
                               Margin="10 5" />

                    <vbr:View Grid.Row="1" />
                </Grid>
            </GridViewItem>

            <!-- Heat Map (Rectangular) -->
