<Page x:Class="XamlBrewer.WinUI3.LiveCharts2.Sample.Views.GalleryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
      xmlns:vbb="using:WinUISample.Bars.Basic"
      xmlns:vbr="using:WinUISample.Bars.Race"
      mc:Ignorable="d"
      Background="Transparent">
    <Grid>
        <!-- LiveCharts2 Logo -->
        <Image Source="/Assets/LiveCharts2Logo.png"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Height="48" />

        <!-- Gallery -->
        <GridView x:Name="GridView"
                  SelectionMode="None"
                  VerticalAlignment="Stretch"
                  Margin="0 0 0 80">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VariableSizedWrapGrid ItemHeight="360"
                                           ItemWidth="420"
                                           Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>

            <!-- Bars - Basic -->
            <GridViewItem CornerRadius="4"
                          Padding="0"
                          Margin="0 0 20 20">
                <GridViewItem.Transitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </GridViewItem.Transitions>
                <Grid Width="400"
                      Height="340"
                      Margin="0"
                      CornerRadius="4"
                      RowDefinitions="auto, *">
                    <Border Margin="0"
                            BorderThickness="0"
                            Background="{ThemeResource SystemAccentColor}"
                            Opacity=".2"
                            Grid.RowSpan="10" />
                    <Border Margin="0"
                            BorderThickness="0"
                            Background="{ThemeResource SystemAccentColor}"
                            Opacity=".5" />

                    <TextBlock Text="Bars - Basic"
                               Padding="0"
                               HorizontalAlignment="Stretch"
                               FontSize="16"
                               Margin="10 5" />
                    <vbb:View Grid.Row="1" />
                </Grid>
            </GridViewItem>

            <!-- Bars - Race -->
            <GridViewItem CornerRadius="4"
